//find and click the Delete Post option in the dropdown on the top right of each post
;(function () {
  setInterval(() => {
    $('artdeco-dropdown-item').each((i, elem) => {
      let txt = $(elem).text().trim();
      if (txt === 'Delete post') {
		$(elem).click();
    }
    });
    //Click the Delete button in the confirmation modal
      setTimeout(() => $('button.feed-shared-decision-modal__confirm-button.button-tertiary-large').click(), 500)
  }, 1000);
}());

